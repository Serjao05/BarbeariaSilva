@model BarbeariaSilva.Models.AgendarViewModel

@{
        ViewData["Title"] = "Agedar Horario";
    
}

<h2>Agendar Horario</h2>

<form>
    <div class="form-group">
        <label asp-for="id_agendamento"></label>
        <input asp-for="id_agendamento" class="form-control" />
        <span asp-validation-for="id_agendamento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="data"></label>
        <input asp-for="data" class="form-control" />
        <span asp-validation-for="data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_barbeiro"></label>
        <input asp-for="id_barbeiro" class="form-control" type="password" />
        <span asp-validation-for="id_barbeiro" class="text-danger"></span>
    </div>
  
    <div class="form-group">
        <label asp-for="id_cliente"></label>
        <input asp-for="id_cliente" class="form-control" type="password" />
        <span asp-validation-for="id_cliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="id_servico"></label>
        <input asp-for="id_servico" class="form-control" type="password" />
        <span asp-validation-for="id_servico" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Agendar Horario</button>
</form> 