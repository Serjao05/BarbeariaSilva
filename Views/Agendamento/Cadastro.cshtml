@model BarbeariaSilva.Models.AgendarViewModel

@{
        ViewData["Title"] = "Agedar Horario";
    
}

<h2>Agendar Horario</h2>

<form asp-controller="Home" asp-action="agendamento" method="post" novalidate>
    <div class="form-group">
        <label asp-for="nome"></label>
        <input asp-for="nome" class="form-control" />
        <span asp-validation-for="nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="data"></label>
        <input type="datetime-local" asp-for="data" class="form-control" />
        <span asp-validation-for="data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_barbeiro"></label>
        <input asp-for="id_barbeiro" class="form-control" type="password" />
        <span asp-validation-for="id_barbeiro" class="text-danger"></span>
        
    </div>
   
    <button type="submit" class="btn btn-primary">Agendar Horario</button>
</form> 